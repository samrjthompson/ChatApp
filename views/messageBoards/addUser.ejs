<%layout('layouts/boilerplate')%> 
<div class="row">
    <h1 class="text-center">Add User to Group</h1>
    <div class="col-6 offset-3">
        <form class="mb-3" action="/messageBoards/<%=id%>/addUserToGroup" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="username" name="username">Username</label>
                <input class="form-control" type="text" name="username" id="username" placeholder="Username to add..." required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div>
                <button class="btn btn-success">Submit</button>                
            </div>
        </form>
        <a href="/messageBoards/">All Message Boards</a>
    </div>
</div>

<h2>Friend List</h2>
<ul>
    <% for(let u of friendList) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= u.username %></h5>
                        <a href="/users/<%= u._id %>" class="btn btn-primary">View profile</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>         
</ul>