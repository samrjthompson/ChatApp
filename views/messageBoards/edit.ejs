    <%layout('layouts/boilerplate')%> 
    <div class="row">
        <h1 class="text-center">Edit Message Board</h1>
        <div class="col-6 offset-3">
            <form action="/messageBoards/<%= messageBoard._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Message Board's Name</label>
                    <input class="form-control" type="text" name="messageBoard[name]" id="name" placeholder="Name..." value="<%=messageBoard.name%>">
                </div>
                <button class="btn btn-info">Submit</button>
            </form>
            <a href="/messageBoards">All Message Boards</a>
        </div>
    </div>