<%layout('layouts/boilerplate')%> 
<div class="row">
    <h1 class="text-center">New User</h1>
    <div class="col-6 offset-3">
        <form action="/users" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="firstName">User's First Name</label>
                <input class="form-control" type="text" name="user[firstName]" id="firstName" placeholder="First name..." required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="lastName">User's Last Name</label>
                <input class="form-control" type="text" name="user[lastName]" id="lastName" placeholder="Last name..." required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="username">User's Username</label>
                <input class="form-control" type="text" name="user[username]" id="username" placeholder="Username..." required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="user[image]" id="image" placeholder="URL...">
            </div>        
            
            <div class="mb-3">
                <label class="form-label" for="bio">User's</label>
                <textarea class="form-control" type="text" name="user[bio]" id="bio" placeholder="Bio..." required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">All Users</a>
    </div>
</div>
