<%layout('layouts/boilerplate')%> 
<div class="row">
    <h1 class="text-center">New User</h1>
    <div class="col-6 offset-3">
        <form action="/users" method="POST">
            <div class="mb-3">
                <label class="form-label" for="firstName">User's First Name</label>
                <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First name...">
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="lastName">User's Last Name</label>
                <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last name...">
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="username">User's Username</label>
                <input class="form-control" type="text" name="username" id="username" placeholder="Username...">
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="URL...">
            </div>        
            
            <div class="mb-3">
                <label class="form-label" for="bio">User's</label>
                <textarea class="form-control" type="text" name="bio" id="bio" placeholder="Bio..."></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">All Users</a>
    </div>
</div>