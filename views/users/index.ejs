<%layout('layouts/boilerplate')%> 
<h1>All Users</h1>

<ul>
    <% for(let u of users) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=u.image %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= u.username %></h5>
                        <p class="card-text">
                            <small class="text-muted"><%= u.firstName %> <%= u.lastName %></small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted"><%= u.bio %></small>
                        </p>
                        <a href="/users/<%= u._id %>" class="btn btn-primary">View profile</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>         
</ul>

<a href="/users/new">Create new user...</a>